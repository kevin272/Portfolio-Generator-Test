<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= portfolio.name %> — Portfolio</title>
    <link rel="stylesheet" href="./style.css" />
  </head>
  <body>
    <section class="hero">
      <div class="hero__content">
        <h1><%= portfolio.name %></h1>
        <p class="hero__headline"><%= portfolio.headline %></p>
        <a class="hero__cta" href="mailto:<%= portfolio.contact %>">Let’s Talk</a>
      </div>
    </section>
    <main>
      <section class="about">
        <h2>About</h2>
        <p><%= portfolio.about %></p>
      </section>
      <% if (portfolio.projects.length) { %>
      <section class="projects">
        <h2>Case Studies</h2>
        <div class="grid">
          <% portfolio.projects.forEach(function(project) { %>
          <article class="card">
            <h3><%= project.title %></h3>
            <p><%= project.description %></p>
            <% if (project.link) { %>
            <a class="button" href="<%= project.link %>">View</a>
            <% } %>
          </article>
          <% }); %>
        </div>
      </section>
      <% } %>
      <% if (portfolio.skills.length) { %>
      <section class="skills">
        <h2>Expertise</h2>
        <ul>
          <% portfolio.skills.forEach(function(skill) { %>
          <li><%= skill %></li>
          <% }); %>
        </ul>
      </section>
      <% } %>
    </main>
    <footer>
      <p>Connect: <%= portfolio.contact %></p>
    </footer>
  </body>
</html>
