<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= portfolio.name %> â€” Portfolio</title>
    <link rel="stylesheet" href="./style.css" />
  </head>
  <body>
    <header>
      <h1><%= portfolio.name %></h1>
      <p class="headline"><%= portfolio.headline %></p>
      <p class="contact"><%= portfolio.contact %></p>
    </header>
    <main>
      <section>
        <h2>About</h2>
        <p><%= portfolio.about %></p>
      </section>
      <% if (portfolio.skills.length) { %>
      <section>
        <h2>Skills</h2>
        <ul class="pill-list">
          <% portfolio.skills.forEach(function(skill) { %>
          <li><%= skill %></li>
          <% }); %>
        </ul>
      </section>
      <% } %>
      <% if (portfolio.projects.length) { %>
      <section>
        <h2>Projects</h2>
        <ul class="project-list">
          <% portfolio.projects.forEach(function(project) { %>
          <li>
            <h3><%= project.title %></h3>
            <p><%= project.description %></p>
            <% if (project.link) { %>
            <a href="<%= project.link %>">View project</a>
            <% } %>
          </li>
          <% }); %>
        </ul>
      </section>
      <% } %>
    </main>
    <footer>
      <small>&copy; <%= new Date().getFullYear() %> <%= portfolio.name %></small>
    </footer>
  </body>
</html>
